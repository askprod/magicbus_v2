<div class="traveller-info mb-3">
  <div class="card m-1 px-0 shadow-sm bg-light border border-danger">
    
    <p class="h6 mt-4"><b>Traveller <%= traveller_index + 1 %></b></p>
    <p class="h6 text-danger"><b>To Complete</b></p>

    <div class="row h-100 no-gutters my-auto">
      <div class="col-12 my-auto py-2">

        <div class="row no-gutters justify-content-center">

          <div class="col-8 p-4">
                <%= button_to "Add Information", new_traveller_path, class: "close-navbar btn btn-stylised", id: "form_traveller_#{traveller_index}", method: :get, remote: true %>
          </div> 
        
        </div>

      </div>
    </div>
    
  </div>
</div>

