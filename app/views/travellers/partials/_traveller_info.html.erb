<div class="traveller-info mb-3">
  <div class="card m-1 px-0 shadow-sm bg-light border border-success">
    
    <%= button_to traveller, method: :delete, class:"btn btn-danger position-absolute m-1 px-1 py-0", style:"top:0; right:0;" do %>
      <%= fa_icon "trash" %>
    <% end %>
    
    <p class="h6 mt-4"><b><%= traveller.first_name %> <%= traveller.last_name.upcase %></b></p>
    <p class="h6 text-success"><b><%= t("travellers.traveller_info.is_complete") %></b></p>

    <div class="row h-100 no-gutters my-auto">
      <div class="col-12 my-auto py-2">

        <div class="row no-gutters justify-content-center">

          <div class="col-8 p-4">
            <%= button_to t("travellers.traveller_info.edit_info"), edit_traveller_path(traveller), method: :get, remote: true, class: "close-navbar btn btn-stylised" %>  
          </div> 
        
        </div>

      </div>
    </div>
    
  </div>
</div>
