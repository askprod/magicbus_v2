<div class="card login-form-small text-center">

<h1 class="card-header adventpro yellow text-center display-5">Newsletter</h1>

    <div class="card-body">
        
        <div id="close-button">
        </div>
        
        <%= form_for :newsletter, remote: true do |f| %>
            <div class="form-group text-center">
                <%= f.label :email_address, "Email", class: "small" %><br />
                <%= f.text_field :email_address, class: "form-control" %>
            </div>
            
            <div class="actions mt-3">
                <%= f.submit "Subscribe", class: "btn btn-lg btn-stylised btn-block adventpro" %>
            </div>
        <% end %>

    </div>
</div>