<div class="card login-form text-center">
      
      <h1 class="card-header adventpro yellow text-center display-5">My Account</h1>

      <div class="card-body">

        <div id="close-button">
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, remote: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">

          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :email %>
              <br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded border form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :new_password %> <em class= "small">(<%= @minimum_password_length %> characters minimum)<br /> Leave blank if you don't want to change it</em>
              <%= f.password_field :password, autocomplete: "new-password", class: "rounded border form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :new_password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded border form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i class="small">(needed to confirm changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "rounded border form-control" %>
            </div>
          </div>

          <div class="col-sm-6 mx-auto my-auto">
            <div class="row justify-content-center">
              <% if @user.picture.attached? %>
                  <%= image_tag(@user.picture, height: 250, width: 250, class: "rounded my-2") %> 
              <% else %>
                  <%= fa_icon "user", class: "fa-4x my-4" %>
              <% end %>
            </div>

            <div class="custom-file text-center mx-auto">
              <%= f.file_field :picture, class:"custom-file-input", id:"filePicture" %>
              <%= f.label :picture, "Choose Picture", class:"custom-file-label", for:"filePicture" %>
            </div>

          </div>

        </div>

        <div class="container">
          <div class="row justify-content-center">
            <div class="col-sm-4">
                <%= f.submit "Update", class: "btn btn-stylised btn-block adventpro" %>
            </div>
            <div class="col-sm-4">
                <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-stylised btn-block adventpro" %>
            </div>
          </div>
        </div>

        <% end %>

      </div>

</div>

<script>
// Show name of file when uploading images
$('.custom-file-input').on('change', function() { 
   let fileName = $(this).val().split('\\').pop(); 
   $(this).next('.custom-file-label').addClass("selected").html(fileName); 
});
</script>