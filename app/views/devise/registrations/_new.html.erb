<div class="card login-form text-center">

    <h1 class="card-header adventpro yellow display-5">Join Us!</h1>

    <div class="card-body">

      <div id="close-button">
      </div>
      
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f| %>
          
        <div class="row">
          <div class="col form-group">
              <%= f.label :first_name, class:"small" %><br />
              <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
          </div>
          <div class="col form-group">
            <%= f.label :email, "Email", class:"small" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col form-group">
              <%= f.label :last_name, class:"small" %><br />
              <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
          </div>
          <div class="col form-group">
            <%= f.label :password, class:"small" %>
            <% if @minimum_password_length %>
            <em class="small">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col form-group mt-4">
            <%= f.check_box :terms_and_conditions %>          
            <%= f.label :terms_and_conditions do %> 
              <span>I agree to the <%= link_to "Terms of Service", root_path, style: "color:black; text-decoration: underline;" %></span>
            <% end %>
          </div>
          <div class="col form-group">
            <%= f.label :password_confirmation, "Password Confirmation", class:"small" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="actions mt-1">
          <%= f.submit "Create my account", class: "btn btn-lg btn-stylised btn-block adventpro" %>
        </div>

    </div>
</div>        
<% end %>
