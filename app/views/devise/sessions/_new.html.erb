  <div class="card login-form-small text-center">
    
    <h1 class="card-header adventpro yellow text-center display-5"><%= t("nav.log_in") %></h1>

    <div class="card-body">
      
      <div id="close-button">
      </div>
      
      <%= form_for resource, as: resource_name, url: session_path(resource_name), remote: true do |f| %>

      <div class="form-group text-center">
        <%= f.label :email, "Email", class: "small" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group text-center">
        <%= f.label t("general_forms.password"), class: "small" %> <br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="small">
        <p><%= t("general_forms.no_account_register") %> <%= link_to t("general_forms.here_word"), new_user_registration_path, remote: true, style: "color:black; text-decoration: underline;" %>!</p>
      </div>

      <div class="small">
        <p>Forgot your password? Reset it <%= link_to "here", new_user_password_path, remote: true, style: "color:black; text-decoration: underline;" %>!</p>
      </div>

      <div class="actions mt-3">
        <%= f.submit t("general_forms.submit"), class: "btn btn-lg btn-stylised btn-block adventpro" %>
      </div>

      <% end %>

    </div>
  </div>


    

