<div class="card login-form-small text-center">

<h1 class="card-header adventpro yellow text-center display-5"> Forgot Password</h1>

    <div class="card-body">
        
        <div id="close-button">
        </div>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group text-center">
            <%= f.label :email, "Email", class: "small" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions mt-3">
            <%= f.submit t("general_forms.submit"), class: "btn btn-lg btn-stylised btn-block adventpro" %>
        </div>

        <% end %>

    </div>
</div>