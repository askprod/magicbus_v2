<footer id="footer" class="footer-1">

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 850 185"><path fill="#e9d520" fill-opacity="1" d="M0,160L40,138.7C80,117,160,75,240,80C320,85,400,139,480,149.3C560,160,640,128,720,133.3C800,139,880,181,960,213.3C1040,245,1120,267,1200,250.7C1280,235,1360,181,1400,154.7L1440,128L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z"></path></svg>

    <div class="main-footer widgets-dark typo-light">
        <div class="container text-center">
            <div class="row">
    
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="widget subscribe no-box">
                        <h6 class="widget-title"><%= t("footer.about_magicbus") %></h6>
                        <p><%= t("footer.bus_to_hotel") %> !</p>
                        <%= render 'trips/faq' %>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="widget no-box">
                        <h6 class="widget-title"><%= t("footer.quick_links") %></h6>
                        <ul class="thumbnail-widget">
                            <li>
                                <div class="thumb-content"><%= link_to t("nav.discover"), discover_path %></div>	
                            </li>
                            <li>
                                <div class="thumb-content"><%= link_to t("nav.travel"), trips_path %></div>	
                            </li>
                            <li>
                                <div class="thumb-content"><%= link_to t("nav.share"), places_path %></div>	
                            </li>
                            <li>
                                <div class="thumb-content"><%= link_to t("nav.story"), story_path %></div>	
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="widget no-box">
                        <% if user_signed_in? %>
                            <h6 class="widget-title"><%= t("nav.my_account") %></h6>
                            <ul>
                                <li>
                                    <%= link_to t("nav.my_account"), edit_user_registration_path, remote: true %>
                                </li>
                                <li>
                                    <%= link_to t("nav.my_cart"), cart_path(@cart) %>
                                </li>                       
                                <% unless current_user.orders.empty? %>
                                <li>
                                    <%= link_to t("nav.my_bookings"), orders_path %>
                                </li>
                                <% end %>
                                <li>
                                    <%= link_to t("nav.log_out"), destroy_user_session_path, method: :delete %>
                                </li>        
                            </ul>
                        <% else %>
                            <h6 class="widget-title"><%= t("footer.get_started") %></h6>
                            <ul>
                                <li>
                                    <%= link_to t("nav.create_account"), new_user_registration_path, remote: true %>
                                </li>
                                <li>
                                    <%= link_to t("nav.log_in"), user_session_path, remote: true %>
                                </li>
                            </ul>
                        <% end %>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="widget no-box">

                        <h6 class="widget-title"><%= t("footer.contact_us") %></h6>

                        <% unless user_signed_in? %>
                            <%= link_to newsletter_path, remote: true, class: "btn btn-sm btn-success" do %>
                                Subscribe to the Newsletter
                            <% end %>
                        <% end %>

                        <a class="text-primary" href="mailto:hello@magicbusworld.com">hello@magicbusworld.com</a>
                        <p>+33 6 59 09 11 65<p>

                        <ul class="social-footer2 mt-2">
                            <li>
                                <%= link_to("https://www.facebook.com/magicbusworld", target: "_blank")  do %>
                                    <%= fa_icon "facebook-square 2x" %>
                                <% end %>
                            </li>
                            <li>
                            <%= link_to("https://www.instagram.com/magicbusworld/", target: "_blank") do %>
                            <%= fa_icon "instagram 2x" %>
                            <% end %>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
  
    <div class="footer-copyright">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 small my-auto">
                    <p>
                        <%= link_to asset_path("/pdf/magicbus_cgu_#{I18n.locale}.pdf"), target: "_blank" do %>
                            <%= t("general_forms.terms_of_use") %>
                        <% end %>
                        |
                        <%= link_to asset_path("/pdf/magicbus_cookies_#{I18n.locale}.pdf"), target: "_blank" do %>
                            Cookies
                        <% end %>
                    </p>
                </div>
                <div class="col-sm-6 text-center small my-auto">
                    <p>Copyright MagicBus Â© <%= Date.current.year %>. <%= t("footer.all_rights") %>.</p>
                </div>
                <div class="col-sm-3 text-right small my-auto">
                    <p><%= t("footer.made_with") %>
                    <%= link_to "https://rubyonrails.org/", target: "_blank" do %>
                        <%= image_tag "https://devstickers.com/assets/img/cat/ruby.png", size: "28x28" %>
                    <% end %>
                    <%= t("footer.by_word") %> <%= link_to "Paul", "http://paultrindinh.com", target: "_blank", style: "color: azure;" %></p>
                </div>
            </div>
        </div>
    </div>

</footer>