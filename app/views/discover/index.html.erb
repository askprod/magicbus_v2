<body>

    <%= render "discover/sidenav" %>

    <section id="whatismagicbus">
        <div>
            <%= image_tag "/images/chill.jpg", class: "image-cover" %>
        </div>

        <div>
            <h1 class="title-box text-center">
                What is MagicBus?
            </h1>
        </div>
    </section>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 200"><path fill="#ffd700" fill-opacity="1" d="M0,160L60,133.3C120,107,240,53,360,42.7C480,32,600,64,720,96C840,128,960,160,1080,165.3C1200,171,1320,149,1380,138.7L1440,128L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path></svg>

    <section id="video-section">
        <iframe src="https://vimeo.com/256330880" class="shadow my-auto" id="discover-video" onload='javascript:(function(o){o.style.height=o.contentWindow.document.body.scrollHeight+"px";}(this));' webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </section>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250"><path fill="#ffd700" fill-opacity="1" d="M0,64L60,96C120,128,240,192,360,224C480,256,600,256,720,224C840,192,960,128,1080,101.3C1200,75,1320,85,1380,90.7L1440,96L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path></svg>

    <section>

        <div id="whatwedo" class="container small-padding py-5">
            <div class="row">

                <div class="col-sm-6 my-auto">
                    <%= image_tag "/images/giphy.gif", class: "img-fluid" %>

                        <div class="row no-gutters" id="counter">

                            <div class="card col-sm-4 mx-auto flex-row border-warning border shadow-lg mb-4" style="background:#ffe475;">
                                <div class="card-title mx-2 my-auto">
                                    <%= fa_icon "road 3x", class:"text-muted" %>
                                </div>
                                <div class="card-body text-right" style="background:#ffd62e;">
                                    <h2><%= @total_trips %></h2><span class="small text-muted">Trips</span>
                                </div>
                            </div>

                            <div class="card col-sm-3 mx-auto flex-row border-warning shadow-lg mb-4" style="background:#ffe475;">
                                <div class="card-title mx-2 my-auto">
                                    <%= fa_icon "user 3x", class:"text-muted" %>
                                </div>
                                <div class="card-body text-right" style="background:#ffd62e;">
                                    <h2><%= @total_users %></h2><span class="small text-muted">Users</span>
                                </div>
                            </div>

                            <div class="card col-sm-4 mx-auto flex-row border-warning shadow-lg mb-4" style="background:#ffe475;">
                                <div class="card-title mx-2 my-auto">
                                    <%= fa_icon "suitcase 3x", class:"text-muted" %>
                                </div>
                                <div class="card-body text-right" style="background:#ffd62e;">
                                    <h2><%= @total_travellers %></h2><span class="small text-muted">Travellers</span>
                                </div> 
                            </div>
                            
                        </div>

                </div>
            
                <div class="col-sm-6">
                    <%= render "what_we_do" %>
                    <div class="container-fluid text-center pt-5">
                        <%= link_to trips_path, class: "btn btn-lg btn-gradient adventpro shadow-lg" do %>
                            <h3 class="font-weight-bold mb-0 py-3">BOOK A TRIP WITH US</h3>
                        <% end %>
                    </div>
                </div>

            </div>

        </div>
    </section>
    
</body>
